<odoo>
    <data>
        <!-- Tree -->
        <record model="ir.ui.view" id="iscapop.item_model_tree">
            <field name="name">Item List</field>
            <field name="model">iscapop.item_model</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="condition"/>
                    <field name="category_id"/>
                </tree>
            </field>
        </record>

        <!-- Form -->
        <record model="ir.ui.view" id="iscapop.item_model_form">
            <field name="name">New Item</field>
            <field name="model">iscapop.item_model</field>
            <field name="arch" type="xml">
                <form string="Item">
                    <sheet>
                        <headers>
                            <button name="donateItem" type="object" string="Donate item" class="oe_highlight" confirm="Do you want to put this item up for donation?" readonly="[('donated','=',True)]"/>
                        </headers>
                        <body>
                            <group>
                                <group name="left">
                                    <field name="photo" string="" widget="image"/>
                                </group>
                                <group name="right">
                                    <group name="rightLeft">
                                        <field name="name"/>
                                        <field name="description"/>
                                        <field name="category_id"/>
                                        <field name="location_id"/>
                                    </group>
                                    <group name="rightRight">
                                        <field name="condition"/>
                                        <field name="documents"/>
                                        <field name="donated" readonly="True"/>
                                    </group>
                                </group>
                            </group>
                        </body>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Kanban -->
        <record model="ir.ui.view" id="iscapop.item_model_kanban">
            <field name="name">Item list</field>
            <field name="model">iscapop.item_model</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="photo" widget="image"/>
                    <field name="category_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <field name="photo" nolabel="1" widget="image" class="oe_right oe_avatar"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong>
                                        <h3><field name="name"/></h3>
                                    </strong>
                                    <div>
                                        <field name="category_id"/>
                                    </div>
                                    <div>
                                        <b>Condition: </b><field name="condition"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>